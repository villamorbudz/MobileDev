<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Calculator">

    <TextView
        android:id="@+id/opDisplayTextView"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="60dp"
        android:clickable="false"
        android:gravity="bottom"
        android:textAlignment="textEnd"
        android:textColor="#A9A9A9"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/num0Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#1A1A1A"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/decimalBtn" />

    <Button
        android:id="@+id/additionBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="+"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/equalsBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/num1Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/signBtn"
        app:layout_constraintEnd_toStartOf="@+id/num2Btn" />

    <Button
        android:id="@+id/subtractionBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="-"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/additionBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divisionBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="/"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/multiplicationBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/num2Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num0Btn"
        app:layout_constraintEnd_toStartOf="@+id/num3Btn" />

    <Button
        android:id="@+id/multiplicationBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="*"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/subtractionBtn"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/percentageBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="%"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num9Btn"
        app:layout_constraintEnd_toStartOf="@+id/divisionBtn" />

    <Button
        android:id="@+id/num9Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num6Btn"
        app:layout_constraintEnd_toStartOf="@+id/multiplicationBtn" />

    <Button
        android:id="@+id/num8Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num5Btn"
        app:layout_constraintEnd_toStartOf="@+id/num9Btn" />

    <Button
        android:id="@+id/decimalBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#1A1A1A"
        android:text="."
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/equalsBtn" />

    <Button
        android:id="@+id/parenthesesBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="( )"
        android:textColor="#FFA500"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num8Btn"
        app:layout_constraintEnd_toStartOf="@+id/percentageBtn" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#1A1A1A"
        android:text="+/-"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/num0Btn" />

    <Button
        android:id="@+id/num4Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num1Btn"
        app:layout_constraintEnd_toStartOf="@+id/num5Btn" />

    <Button
        android:id="@+id/equalsBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#FFA500"
        android:text="="
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="C"
        android:textColor="#FF0000"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num7Btn"
        app:layout_constraintEnd_toStartOf="@+id/parenthesesBtn" />

    <Button
        android:id="@+id/num6Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num3Btn"
        app:layout_constraintEnd_toStartOf="@+id/subtractionBtn" />

    <Button
        android:id="@+id/num7Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num4Btn"
        app:layout_constraintEnd_toStartOf="@+id/num8Btn" />

    <Button
        android:id="@+id/num3Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/decimalBtn"
        app:layout_constraintEnd_toStartOf="@+id/additionBtn" />

    <Button
        android:id="@+id/num5Btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#1A1A1A"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/num2Btn"
        app:layout_constraintEnd_toStartOf="@+id/num6Btn" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:gravity="bottom"
        android:textAlignment="viewEnd"
        android:textColor="#e2e2e2"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/opDisplayTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>